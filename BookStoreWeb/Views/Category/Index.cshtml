@model List<Category>

<div class="container">
	
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary"> Список категорий</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary" asp-controller="Category" asp-action="Create">
				<i class="bi bi-plus-circle"></i> добавить категорию
			</a>
		</div>
	</div>


<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Название категории
			</th>
			<th>
				Приоритет
			</th>
			<th>

			</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var category in Model.OrderBy(c => c.DisplayOrder)) 
		{
			<tr>
				<td>@category.Name</td>
				<td>@category.DisplayOrder</td>
				<td>
					<div class="btn-group w-100" role="group">
						<a class="btn btn-info mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">
							<i class="bi bi-pencil"></i> Редактирвать
						</a>
							<a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
							<i class="bi bi-trash3"></i> Удалить
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>

</div>
